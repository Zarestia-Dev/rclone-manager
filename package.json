{
  "name": "rclone-manager",
  "version": "0.2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "tauri": "tauri",
    "headless-dev": "npm run tauri dev -- --config src-tauri/tauri.conf.headless.json --features web-server,updater",
    "headless": "npm run tauri build -- --config src-tauri/tauri.conf.headless.json --features web-server,updater",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "lint:rust": "cd src-tauri && cargo clippy -- -D warnings",
    "format:rust": "cd src-tauri && cargo fmt",
    "format:rust:check": "cd src-tauri && cargo fmt -- --check",
    "lint:all": "npm run lint && npm run format:check && npm run lint:rust && npm run format:rust:check",
    "fix:all": "npm run lint:fix && npm run format && npm run format:rust",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,json}": [
      "prettier --write"
    ],
    "src-tauri/src/**/*.rs": [
      "sh -c 'cd src-tauri && cargo fmt'",
      "sh -c 'cd src-tauri && cargo clippy -- -D warnings'"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.1",
    "@angular/cdk": "^21.1.1",
    "@angular/common": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/material": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-os": "^2.3.2",
    "cronstrue": "^3.9.0",
    "marked": "^17.0.0",
    "ngx-mat-timepicker": "^21.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.1",
    "@tauri-apps/cli": "^2.3.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jasmine": "~5.1.0",
    "@types/marked": "^5.0.2",
    "angular-eslint": "21.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.50.0"
  }
}
