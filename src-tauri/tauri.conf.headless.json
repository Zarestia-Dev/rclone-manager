{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RClone Manager Headless",
  "mainBinaryName": "rclone-manager-headless",
  "version": "0.2.2",
  "identifier": "com.rclone.manager.headless",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build && node -e \"require('fs').mkdirSync('src-tauri/empty', {recursive: true})\"",
    "frontendDist": "empty"
  },
  "bundle": {
    "resources": {
      "../dist/rclone-manager/browser": "browser",
      "../resources/i18n": "i18n/"
    },
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "msi", "dmg", "app", "deb", "rpm"],
    "category": "Utility",
    "shortDescription": "User-friendly GUI for RClone (Headless)",
    "homepage": "https://github.com/Zarestia-Dev/rclone-manager",
    "publisher": "Zarestia Dev",
    "longDescription": "RClone Manager (Headless) is a user-friendly WebUI for RClone, designed to simplify the process of managing and transferring files across various cloud storage services. With its intuitive interface, users can easily configure and execute Rclone commands without needing extensive technical knowledge.",
    "copyright": "Copyright Â© 2026 Zarestia Dev",
    "license": "GNU GPLv3",
    "linux": {
      "deb": {
        "desktopTemplate": "linux/headless/template-headless.desktop",
        "depends": ["xvfb", "dbus-x11"],
        "recommends": ["rclone"],
        "postInstallScript": "linux/headless/postinstall.sh",
        "preRemoveScript": "linux/headless/preremove.sh"
      },
      "rpm": {
        "desktopTemplate": "linux/headless/template-headless.desktop",
        "depends": ["xorg-x11-server-Xvfb", "dbus-x11"],
        "recommends": ["rclone"],
        "postInstallScript": "linux/headless/postinstall.sh",
        "preRemoveScript": "linux/headless/preremove.sh"
      }
    },
    "windows": {
      "wix": {
        "bannerPath": "icons/wix-banner.bmp",
        "dialogImagePath": "icons/wix-dialog.bmp"
      },
      "nsis": {
        "headerImage": "icons/nsis-header.bmp",
        "sidebarImage": "icons/nsis-sidebar.bmp",
        "installerIcon": "icons/icon.ico",
        "startMenuFolder": "RClone Manager Headless",
        "compression": "lzma"
      }
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "localhost"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEzQkE2OTczRUM3RDkzNkYKUldSdmszM3NjMm02bzBTOXhXU0JBZS9TMGdtN1RoanUrZUpiVndsMHJhM0pHRXpiWWpQNkRiYlQK"
    }
  }
}
